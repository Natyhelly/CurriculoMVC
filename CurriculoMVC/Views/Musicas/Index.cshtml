@{
    ViewData["Title"] = "Músicas";
}

        <div style="height:400px">
            <form id="formulario" method="post">
                <input id="idMusica" type="hidden" value="" />

                <div class="mb-3">
                    <label for="nomeMusica" class="form-label">Nome da Música</label>
                    <input id="nomeMusica" class="form-control form-control-sm" type="text" value="" placeholder="Ex.: Nome da música - Artista" style="width:300px" />
                </div>
                <div class="mb-3">
                    <label for="generoMusica" class="genero">Gênero Musical</label>
                    <select id="generoMusica" class="form-select form-select-sm" name="genero" style="width: 150px; margin-top: 8px">
                        <option selected></option>
                        <option>Clássica</option>
                        <option>Eletrônica</option>
                        <option>Funk</option>
                        <option>Pop</option>
                        <option>Rap</option>
                        <option>Rock</option>
                        <option>Samba</option>
                        <option>Sertanejo</option>
                    </select>
                </div>
                <div name="divSpotify" class="mb-3">
                    <label style="margin-bottom: 10px">Tem no Spotify?</label> <br />
                    <div class="form-check form-check-inline opcoesSpotify">
                        <input id="spoti-Sim" class="form-check-input" type="radio" value="Sim" name="spotify" />
                        <label class="form-check-label">Sim</label>
                    </div>
                    <div class="form-check form-check-inline opcoesSpotify">
                        <input id="spoti-Nao" class="form-check-input" type="radio" value="Nao" name="spotify" />
                        <label class="form-check-label">Não</label>
                    </div>
                    <div class="form-check form-check-inline opcoesSpotify">
                        <input id="spoti-NaoSei" class="form-check-input" type="radio" value="NaoSei" name="spotify" />
                        <label class="form-check-label">Não sei</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="dataCadastro" class="form-label">Data de Cadastro</label>
                    <input id="dataCadastro" class="form-control form-control-sm" type="date" value="" style="width:125px" />
                </div>

            </form>
            <div style="width: 764px; margin-left: 23%; text-align: center">
                <table id="tabela" class="table table-light table-bordered" style="margin-top: 15px; width: 825px">
                    <tbody id="bodyTabela">
                        <tr class="table-danger">
                            <th style="width: 340px">Nome</th>
                            <th style="width: 100px">Gênero</th>
                            <th style="width: 70px">Spotify?</th>
                            <th style="width: 85px">Cadastro</th>
                            <th style="width: 50px">Opções</th>
                        </tr>
                    </tbody>
                </table>
                <div id="divBotoes">
                    <button onclick="gravarDados()" type="button" id="botao-salvar" style="border-radius: 10px; border: 2px solid #dfc2c4">
                        <img src="~/lib/bootstrap/dist/icons/check2.svg" alt="Bootstrap" width="20" height="20">
                    </button>
                    <button onclick="apagarDados()" type="button" id="botao-cancelar" style="border-radius: 10px; border: 2px solid #dfc2c4">
                        <img src="~/lib/bootstrap/dist/icons/x-lg.svg" alt="Bootstrap" width="20" height="20">
                    </button>
                </div>

            </div>
        </div>
   
